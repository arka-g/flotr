<a href="/"><h1 class="site-title">Flotr</h1></a>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div id="signup-1" class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email address" %>
    <span class="flotr-envelope"></span>
  </div>

  <div id="signup-4" class="actions">
    <%= f.submit "Send password reset instructions" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
