<a href="/"><h1 class="site-title">Flotr</h1></a>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div id="login-1" class="field">
    <%= f.email_field :email, autofocus: true, :placeholder => "Email address" %>
    <span class="flotr-envelope"></span>
  </div>

  <div id="login-2" class="field">
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %>
    <span class="flotr-lock"></span>
  </div>

  <div id="login-3" class="actions">
    <%= f.submit "Log in" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div id="login-4" class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
<% end %>

<%= render "devise/shared/links" %>
