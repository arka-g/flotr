<form id="conForm">
  <div id="package-select">
    <h3>Select a package:</h3>
    <input type="radio" name="price" value="$20" checked>  Digital License .......... $20<br>
    <h4>High-resolution JPEG, unlimited commercial use.</h4>
    <input type="radio" name="price" value="$69" checked> Canvas Print ............. $69<br>
    <h4>20" x 30" canvas print.</h4>
    <input type="radio" name="price" value="$75" checked> Total Package ........... $75<br>
    <h4>20" x 30" canvas print, high-res JPEG, unlimited commercial license.</h4>
  </div>
  <div id="cc-info">
    <h3>Credit Card Number:</h3>
    <input id ="card_num" type="text" maxlength="16" required placeholder="Must be 16-digits"><br>
    <input type="submit" onclick="checkValues()" value="Buy Now!" id="buy-now">
  </div>
</form>

<%= javascript_tag do %>
  $('#conForm').submit(function () {
    if($('#card_num').val() == 0){
      return false;
    }else{
      alert("Item has been bought! Your reciept has been emailed to you.");
      return false;
    }
  });
<% end %>
