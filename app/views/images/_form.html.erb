<%= form_for(@image) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, placeholder: "Must be a minimum of 3 characters long" %><br>
  <%= f.label :tags %>
  <%= f.text_field :all_tags, placeholder: "Separated with comma, must be a minimum of 3 characters long" %><br>
  <%= f.file_field :image %><br>
  <%= f.submit "Save Image" %>

