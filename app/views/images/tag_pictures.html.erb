<header>
  <div id="header-logo">
    <a href="/"><h1 class="header-left">Flotr</h1></a>
  </div>
  <h1 id="browse-tags-title" class="header-center"><a href="<%= browse_path %>">Browse Tags</a> > <%= request.original_url.split('/')[-1].capitalize %></h1>
</header>

<div id="grid">
  <% @images.each do |img| %>
    <div class="grid-image">
      <%= link_to img do %>
        <%= image_tag img.image.url, :class => "grid-image" %>
      <% end %>
      <%= link_to img.title, img.image.url, :class => "grid-title" %>
    </div>
  <% end %>
</div>
